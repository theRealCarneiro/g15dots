#!/bin/sh

text=$(cat /tmp/updates_count 2>/dev/null || echo 0)
tooltip=$(cat /tmp/updates_combined 2>/dev/null |
	sed '/^$/d' | awk '{printf "%-20s--> %-10s\n", $1, $2}' |
	sed ':a;N;$!ba;s/\n/\\n/g' ||
	echo No Updates)
printf '{"text": %s, "tooltip": "%s", "class": "%s"}' "$text" "$tooltip" "default"
