{
	"$schema": "/etc/xdg/swaync/configSchema.json",
	"positionX": "right",
	"positionY": "top",
	"layer": "overlay",
	"control-center-layer": "overlay",
	"control-center-exclusive-zone": false,
	"layer-shell": true,
	"cssPriority": "application",
	"control-center-margin-top": 0,
	"control-center-margin-bottom": 0,
	"control-center-margin-right": 0,
	"control-center-margin-left": 0,
	"notification-2fa-action": true,
	"notification-inline-replies": false,
	"notification-icon-size": 64,
	"notification-body-image-height": 100,
	"notification-body-image-width": 200,
	"timeout": 10,
	"timeout-low": 5,
	"timeout-critical": 0,
	"fit-to-screen": true,
	"control-center-width": 530,
	"control-center-height": 600,
	"notification-window-width": 300,
	"keyboard-shortcuts": true,
	"image-visibility": "when-available",
	"transition-time": 200,
	"hide-on-clear": false,
	"hide-on-action": true,
	"script-fail-notify": true,
	"scripts": {
		"example-script": {
			"exec": "echo 'Do something...'",
			"urgency": "Normal"
		},
		"example-action-script": {
			"exec": "echo 'Do something actionable!'",
			"urgency": "Normal",
			"run-on": "action"
		}
	},
	"notification-visibility": {
		"volume_notification": {
			"app-name": "xfctrl",
			"state": "transient"
		},

		"spotify": {
			"app-name": "spotify",
			"state": "transient"
		}
	},
	"widgets": [
		"buttons-grid",
		"volume",
		"backlight",
		"title",
		"dnd",
		"inhibitors",
		"notifications",
		"mpris"
	],
	"widget-config": {
		"inhibitors": {
			"text": "Inhibitors",
			"button-text": "Clear All",
			"clear-all-button": true
		},
		"title": {
			"text": "Notifications",
			"clear-all-button": true,
			"button-text": "Clear All"
		},
		"dnd": {
			"text": "Do Not Disturb"
		},
		"buttons-grid": {
			"actions": [
				{
					"label": "",
					"type": "toggle",
					"active": false,
					"command": "rfkill toggle wifi",
					"update-command": "sh -c '[ $(nmcli radio wifi) = \"enabled\" ] && echo true || echo false'"
				},
				{
					"label": "",
					"type": "toggle",
					"active": true,
					"command": "rfkill toggle bluetooth",
					"update-command": "sh -c '[ $(bluetoothctl show | grep Powered | cut -d \" \" -f2) = no ] && echo false || echo true'"
				},
				{
					"label": "",
					"type": "toggle",
					"active": true,
					"command": "hyprfxtoggle -silent",
					"update-command": "sh -c '[ $(hyprfxtoggle -get) = 1 ] && echo true || echo false'"
				},
				{
					"label": "",
					"type": "toggle",
					"active": false,
					"command": "g15pc -t",
					"update-command": "sh -c '[ $(g15pc -gg) = 'True' ] && echo true || echo false'"
				}
			]
		},
		"label": {
			"max-lines": 5,
			"text": "Label Text"
		},
		"volume": {
			"label": ""
		},
		"backlight": {
			"label": "󰃠",
			"device": "nvidia_wmi_ec_backlight"
		},
		"menubar": {
			"menu#settings": {
				"label": "   Configurações",
				"position": "left",
				"animation_type": "slide_up",
				"actions": [
					{
						"label": "Wallpaper",
						"command": "waypaper"
					},
					{
						"label": "Exibição",
						"command": "nwg-displays"
					},
					{
						"label": "Aparência",
						"command": "nwg-look"
					}
				]
			},
			"menu#power": {
				"label": "⏻  Energia",
				"position": "left",
				"animation_type": "slide_down",
				"actions": [
					{
						"label": "Shut down",
						"command": "systemctl poweroff"
					},
					{
						"label": "CU",
						"command": "notify-send CU"
					}
				]
			},
			"topbar-buttons": {
				"type": "buttons",
				"position": "right",
				"actions": []
			}
		},
		"mpris": {
			"image-size": 96,
			"image-radius": 12
		}
	}
}
